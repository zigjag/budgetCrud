    <h1>{{text}}</h1>
    
    <label>Username</label>
    <input type="text" name="username" placeholder="Spongebob" required>

    <label>Password</label>
    <input type="password" name="password" placeholder="p@ssw0rd" required>

    <button type="submit" name="login">{{text}}</button>

    <a href="/{{altLink}}">{{altText}}</a>
  </form>

</div>


