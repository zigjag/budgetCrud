<%- include("header") -%>

<div class="container">
  <h2>Filter by:</h2>

  <form action="/renderResults" method="post">

    <div class="form-group">
      <label for="date">Date</label>
      <input class="form-control-sm" type="text" name="date" placeholder="January">
    </div>

    <div class="form-group">
      <label for="type">Type</label>
      <select class="form-control-sm" name="type">
        <option>Income</option>
        <option>Expense</option>
      </select>
    </div>

    <button type="submit" name="button">Filter</button>

  </form>

  <p class="results">The total <%= type %> for <%= date %> of this year was <%= results %></p>

  <script type="text/javascript">
    $(document).ready(function() {
      $(".results").hide();
      $("form").on('load', function() {
        $(".results").delay(5000).show();
      });
    })
  </script>

</div>

<%- include("footer") -%>
