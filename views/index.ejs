<%- include("header") -%>


<div class="container">
  <h2><%= pageTitle %></h2>
  <a href="/add" class="btn btn-sm btn-primary">Add Record</a><br /><br />

  <table class="table table-dark table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>Date</th>
        <th>Type</th>
        <th>Category</th>
        <th>Description</th>
        <th>Payment Method</th>
        <th>Amount</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% records.forEach(function(record) { %>
      <tr>
        <td><%= record.id %></td>
        <td><%= record.date %></td>
        <td><%= record.type %></td>
        <td><%= record.category %></td>
        <td><%= record.description %></td>
        <td><%= record.pmt_method %></td>
        <td><%= record.amount %></td>
        <td>
          <a href="edit?id=<%= record.id %>" class="btn btn-sm btn-primary">Edit</a>
          <a href="delete?id=<%= record.id %>" class="btn btn-sm btn-danger">Delete</a>
        </td>
      </tr>
      <% }); %>

    </tbody>
  </table>
</div>

<%- include("footer") -%>
