<%- include("header") -%>

<div class="container">
  <h2><%= pageTitle %></h2>

  <form action="/update" method="post">

    <div class="form-group">
      <h4>Record <%= records.id %></h4>
      <input type="hidden" name="id" value="<%= records.id %>">
    </div>

    <div class="form-group">
      <label for="date">Date:</label>
      <input class="form-control date" type="date" name="date" value="<%= date %>">
    </div>

    <div class="form-group">
      <label for="type">Type:</label>
      <!-- <select class="form-control type" name="type">
        <option value="Income">Income</option>
        <option value="Expense">Expense</option>
      </select> -->
      <input class="form-control type" type="text" name="type" value="<%= records.type %>">
    </div>

    <div class="form-group">
      <label for="category">Category:</label>
      <select class="form-control category" name="category">
        <% for(var i = 0; i < incomeItems.length; i++) { %>
        <option class="A"><%= incomeItems[i] %></option>
        <%  } %>

        <% for(var i = 0; i < expenseItems.length; i++) { %>
        <option class="B"><%= expenseItems[i] %></option>
        <%  } %>
      </select>
    </div>

    <div class="form-group">
      <label for="Description">Description:</label>
      <input class="form-control description" type="text" name="description" value="<%= records.description %>">
    </div>

    <div class="form-group">
      <label for="pmt_method">Payment Method:</label>
      <!-- <Select class="form-control pmt_method" name="pmt_method">
        <option>Account/ACH</option>
        <option>Debit Card</option>
        <option>Credit Card</option>
      </Select> -->
      <input class="form-control description" type="text" name="pmt_method" value="<%= records.pmt_method %>">
    </div>

    <div class="form-group">
      <label for="amount">Amount:</label>
      <input class="form-control amount" type="text" name="amount" value="<%= records.amount %>">
    </div>

    <button class="btn btn-primary" type="submit" name="button">Update</button>
  </form>

</div>


<%- include("footer") -%>
