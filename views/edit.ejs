<%- include("header") -%>

<form action="/update" method="post">

  <h4>Record <%= records.id %></h4>

  <div class="form-group">
    <label for="date">Date:</label>
    <input class="form-control date" type="date" name="date" value="<%= records.date %>">
  </div>

  <div class="form-group">
    <label>Type: </label>
    <input class="form-control type" type="text" list="type_options" value="<%= records.type %>">
    <datalist id="type_options">
      <option value="Income">Income</option>
      <option value="Expense">Expense</option>
    </datalist>
  </div>


  <div class="form-group">
    <label>Category: </label>
    <input class="form-control category" type="text" list="category_options" value="<%= records.category %>">
    <datalist id="category_options">
    </datalist>
  </div>

  <div class="form-group">
    <label for="Description">Description:</label>
    <input class="form-control description" type="text" name="description" value="<%= records.description %>">
  </div>

  <div class="form-group">
    <label>Payment Method: </label>
    <input class="form-control pmt_method" type="text" list="pmt_method_options" value="<%= records.pmt_method %>">
    <datalist id="pmt_method_options">
      <option value="Account/ACH">Account/ACH</option>
      <option value="Debit Card">Debit Card</option>
      <option value="Credit Card">Credit Card</option>
    </datalist>
  </div>

  <div class="form-group">
    <label for="amount">Amount:</label>
    <input class="form-control amount" type="number" step="0.01" name="amount" value="<%= records.amount %>">
  </div>

  <button class="btn btn-primary" type="submit" name="button">Update Transaction</button>
</form>

</div>


<script type="text/javascript">
  $(document).ready(function() {
    let incomeItems = ["Checking Balance", "Savings Balance", "Paycheck", "Bonus", "Interest Income", "Other Income"];
    let expenseItems = ["Transportation/Work", "Bills", "Debt", "Groceries and Shopping", "Home/Rent", "Entertainment", "Transfer Out", "Other"];

    $(".type").on("change", function() {
      if (this.value == "Income") {
        $("#category_options").empty();
        for (var i = 0; i < incomeItems.length; i++) {
          $("#category_options").append("<option>" + incomeItems[i] + "</option>");
        }
      } else if (this.value == "Expense") {
        $("#category_options").empty();
        for (var i = 0; i < expenseItems.length; i++) {
          $("#category_options").append("<option>" + expenseItems[i] + "</option>");
        }
      }
    });
  });
</script>


<%- include("footer") -%>
